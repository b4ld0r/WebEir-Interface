<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ciia.webeirinterface.model.db.Accion">
	<select id="getListaAccion" resultType="Accion">
		SELECT
			idAccion,
			descripcion			
		FROM ACCION
		ORDER BY descripcion ASC
	</select>
	<select id="getAccion" parameterType="Accion" resultType="Accion">
		SELECT
			idAccion,
			descripcion
		FROM ACCION
		WHERE idAccion = #{idAccion}
	</select>
	<update id="updateAccion" parameterType="Accion">
		UPDATE ACCION
		SET descripcion = #{descripcion}
		WHERE idAccion = #{idAccion}
	</update>
	<insert id="insertAccion" parameterType="Accion" keyProperty="idAccion">
		INSERT INTO USUARIO 
			(descripcion)
		VALUES
			(#{descripcion})
	</insert>
</mapper>